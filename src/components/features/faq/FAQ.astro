---
import { ScrollReveal } from '@common';
import FAQAccordion from './FAQAccordion';

interface Props {
  id?: string;
}

const { id = 'faq' } = Astro.props;
---

<section id={id} class="relative py-16 sm:py-20 md:py-24 overflow-hidden">
  <!-- Background with gradient -->
  <div class="absolute inset-0 bg-gradient-to-br from-slate-50 via-blue-50/30 to-indigo-50 dark:from-slate-950 dark:via-slate-900 dark:to-indigo-950"></div>
  
  <!-- Decorative elements -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute -top-40 -right-40 w-80 h-80 bg-indigo-400/10 dark:bg-indigo-500/5 rounded-full blur-3xl"></div>
    <div class="absolute -bottom-40 -left-40 w-80 h-80 bg-purple-400/10 dark:bg-purple-500/5 rounded-full blur-3xl"></div>
  </div>

  <div class="relative max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section header -->
    <ScrollReveal animation="fade-up" class="text-center mb-12 sm:mb-16 space-y-4 sm:space-y-6">
      <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-gradient-to-r from-indigo-500/10 to-purple-500/10 dark:from-indigo-500/20 dark:to-purple-500/20 border border-indigo-200 dark:border-indigo-800">
        <svg class="w-5 h-5 text-indigo-600 dark:text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <span class="text-sm font-semibold text-indigo-700 dark:text-indigo-300 uppercase tracking-wide">FAQ</span>
      </div>
      
      <h2 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold px-4">
        <span class="bg-gradient-to-r from-slate-900 via-indigo-800 to-purple-900 dark:from-slate-100 dark:via-indigo-200 dark:to-purple-200 bg-clip-text text-transparent">
          Câu hỏi thường gặp
        </span>
      </h2>
      
      <p class="text-base sm:text-lg md:text-xl text-slate-600 dark:text-slate-400 max-w-3xl mx-auto px-4 leading-relaxed">
        Giải đáp những thắc mắc phổ biến về dịch vụ luận giải Tử Vi của chúng tôi
      </p>
    </ScrollReveal>

    <!-- FAQ Accordion -->
    <ScrollReveal animation="fade-up" delay={200}>
      <div class="mx-auto w-full max-w-4xl">
        <FAQAccordion client:load />
      </div>
    </ScrollReveal>

    <!-- Bottom CTA -->
    <ScrollReveal animation="fade-up" delay={300}>
      <div class="mt-12 sm:mt-16 text-center">
        <div class="inline-flex flex-col sm:flex-row items-center gap-4 p-6 sm:p-8 rounded-2xl bg-gradient-to-br from-indigo-500 to-purple-600 shadow-xl">
          <div class="flex-1 text-left">
            <h3 class="text-lg sm:text-xl font-bold text-white mb-2">Vẫn còn thắc mắc?</h3>
            <p class="text-sm sm:text-base text-indigo-100">Liên hệ ngay để được tư vấn chi tiết và giải đáp mọi câu hỏi</p>
          </div>
          <a 
            href="#contact" 
            class="inline-flex items-center gap-2 px-6 py-3 bg-white text-indigo-600 font-semibold rounded-xl hover:bg-indigo-50 transition-all duration-300 hover:scale-105 shadow-lg hover:shadow-xl whitespace-nowrap"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
            </svg>
            <span>Liên hệ tư vấn</span>
          </a>
        </div>
      </div>
    </ScrollReveal>
  </div>
</section>

