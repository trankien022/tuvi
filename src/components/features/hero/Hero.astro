    letter-spacing: -0.02em;
    text-shadow: 0 4px 20px rgba(251, 191, 36, 0.3);
  }
  
  .hero-description {
    font-family: 'Inter', 'Poppins', -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
    font-weight: 500;
    letter-spacing: -0.01em;
    text-rendering: optimizeLegibility;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }
  
  .hero-cta-primary {
    font-family: 'Inter', 'Poppins', -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
    font-weight: 700;
    letter-spacing: -0.01em;
    text-rendering: optimizeLegibility;
  }
  
  .hero-cta-secondary {
    font-family: 'Inter', 'Poppins', -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
    font-weight: 600;
    letter-spacing: -0.01em;
    text-rendering: optimizeLegibility;
  }
  
  .hero-stat-card {
    font-family: 'Inter', 'Poppins', -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .hero-stat-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
  }
  
  .hero-stat-number {
    font-family: 'Space Grotesk', 'Poppins', 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
    font-weight: 900;
    letter-spacing: -0.02em;
    text-rendering: optimizeLegibility;
  }
  
  .hero-stat-label {
    font-family: 'Inter', 'Poppins', -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
    font-weight: 600;
    letter-spacing: -0.01em;
    text-rendering: optimizeLegibility;
  }

  /* Optimize Vietnamese text rendering */
  #hero h1, #hero p, #hero span {
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    text-rendering: optimizeLegibility;
    font-feature-settings: "kern" 1;
  }

  /* GPU acceleration for animations */
  #hero .animate-blob {
    transform: translate3d(0, 0, 0);
    backface-visibility: hidden;
  }

  /* Ensure proper Vietnamese character display */
  #hero h1 {
    font-synthesis: none;
    font-kerning: normal;
  }

  /* Hide UnicornStudio watermark - Multiple selectors for comprehensive coverage */
  a[href*="unicorn.studio"],
  a[href*="unicornstudio"],
  a[target="_blank"][rel*="noopener"],
  #us-animation-wrapper a,
  div[data-us-project] a,
  div[data-us-project] > a,
  div[data-us-project] + a,
  .unicornstudio-watermark,
  [class*="watermark"],
  [id*="watermark"] {
    display: none !important;
    opacity: 0 !important;
    visibility: hidden !important;
    pointer-events: none !important;
    width: 0 !important;
    height: 0 !important;
    position: absolute !important;
    left: -9999px !important;
  }
</style>

<!-- Scroll effect script with throttle -->
<script>
  document.addEventListener('DOMContentLoaded', function () {
    const hero = document.getElementById('hero');
    const heroOverlay = document.getElementById('hero-overlay');
    let ticking = false;

    const updateOverlay = () => {
      const scrollTop = window.pageYOffset;
      const windowHeight = window.innerHeight;
      const overlayOpacity = Math.min(0.5, scrollTop / windowHeight);

      if (heroOverlay) {
        heroOverlay.style.opacity = overlayOpacity.toString();
      }
      ticking = false;
    };

    window.addEventListener('scroll', function () {
      if (!ticking) {
        window.requestAnimationFrame(updateOverlay);
        ticking = true;
      }
    }, { passive: true });
  });
</script>

<!-- Watermark Remover Script - Must run before UnicornStudio -->
<script type="text/javascript" is:inline>
  (function() {
    // Function to aggressively remove watermark
    function removeWatermark() {
      // Find and remove all links containing unicorn.studio
      var links = document.querySelectorAll('a[href*="unicorn.studio"], a[href*="unicornstudio"]');
      links.forEach(function(link) {
        link.remove();
      });
      
      // Find and hide any remaining watermark elements
      var watermarks = document.querySelectorAll('[class*="watermark"], [id*="watermark"]');
      watermarks.forEach(function(el) {
        el.style.display = 'none';
        el.remove();
      });
      
      // Check inside the animation wrapper
      var wrapper = document.getElementById('us-animation-wrapper');
      if (wrapper) {
        var allLinks = wrapper.querySelectorAll('a');
        allLinks.forEach(function(link) {
          link.remove();
        });
      }
      
      // Check inside data-us-project div
      var projectDiv = document.querySelector('[data-us-project]');
      if (projectDiv) {
        var projectLinks = projectDiv.querySelectorAll('a');
        projectLinks.forEach(function(link) {
          link.remove();
        });
      }
    }
    
    // Run immediately
    removeWatermark();
    
    // Run after DOM is ready
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', removeWatermark);
    }
    
    // Set up MutationObserver to watch for dynamically added watermarks
    var observer = new MutationObserver(function(mutations) {
      removeWatermark();
    });
    
    // Start observing when DOM is ready
    function startObserving() {
      var targetNode = document.getElementById('us-animation-wrapper') || document.body;
      observer.observe(targetNode, {
        childList: true,
        subtree: true,
        attributes: true,
        attributeFilter: ['style', 'class', 'id']
      });
    }
    
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', startObserving);
    } else {
      startObserving();
    }
    
    // Also run periodically for the first few seconds
    var intervalCount = 0;
    var checkInterval = setInterval(function() {
      removeWatermark();
      intervalCount++;
      if (intervalCount > 20) { // Stop after 10 seconds (20 * 500ms)
        clearInterval(checkInterval);
      }
    }, 500);
  })();
</script>

<!-- UnicornStudio Script - Optimized Loading -->
<script type="text/javascript" is:inline>
  // Defer UnicornStudio loading until page is fully loaded
  (function() {
    function loadUnicornStudio() {
      if (!window.UnicornStudio) {
        window.UnicornStudio = { isInitialized: false };
        var script = document.createElement('script');
        script.src = 'https://cdn.jsdelivr.net/gh/hiunicornstudio/unicornstudio.js@v1.4.33/dist/unicornStudio.umd.js';
        script.async = true;
        script.defer = true;
        script.onload = function() {
          if (!window.UnicornStudio.isInitialized) {
            UnicornStudio.init();
            window.UnicornStudio.isInitialized = true;
            
            // Fade in animation after initialization
            setTimeout(function() {
              var wrapper = document.getElementById('us-animation-wrapper');
              if (wrapper) {
                wrapper.style.opacity = '1';
              }
            }, 300);
          }
        };
        (document.head || document.body).appendChild(script);
      }
    }
    
    // Use requestIdleCallback for non-critical loading, fallback to setTimeout
    if ('requestIdleCallback' in window) {
      requestIdleCallback(loadUnicornStudio, { timeout: 2000 });
    } else {
      // Load after page fully loaded
      if (document.readyState === 'complete') {
        setTimeout(loadUnicornStudio, 100);
      } else {
        window.addEventListener('load', function() {
          setTimeout(loadUnicornStudio, 100);
        });
      }
    }
  })();
</script>
