---
import { Icon } from 'astro-icon/components';
import { ScrollReveal } from '@common';
---

<!-- Preconnect to CDN for faster loading -->
<link rel="preconnect" href="https://cdn.jsdelivr.net" crossorigin />
<link rel="dns-prefetch" href="https://cdn.jsdelivr.net" />
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

<section id="hero" class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Animated gradient background -->
  <div class="absolute inset-0 bg-gradient-to-br from-indigo-900 via-purple-900 to-pink-900">
        <div class="absolute inset-0 bg-[url('data:image/svg+xml,%3csvg%20width=%2260%22%20height=%2260%22%20viewBox=%220%200%2060%2060%22%20xmlns=%22http://www.w3.org/2000/svg%22%3e%3cg%20fill=%22none%22%20fill-rule=%22evenodd%22%3e%3cg%20fill=%22%23ffffff%22%20fill-opacity=%220.05%22%3e%3cpath%20d=%22M36%2034v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6%2034v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6%204V0H4v4H0v2h4v4h2V6h4V4H6z%22/%3e%3c/g%3e%3c/g%3e%3c/svg%3e')]"></div>
  </div>

  <!-- UnicornStudio Animation with Loading State -->
  <div id="us-animation-wrapper" class="absolute inset-0 overflow-hidden pointer-events-none opacity-0 transition-opacity duration-1000">
    <div data-us-project="0EKzPMvVLLdF0UgtXigd" style="width: 100%; height: 100%; min-height: 100vh;"></div>
  </div>

  <!-- Floating elements -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute top-20 left-10 w-72 h-72 bg-purple-500/30 rounded-full blur-3xl animate-blob"></div>
    <div class="absolute top-40 right-10 w-72 h-72 bg-pink-500/30 rounded-full blur-3xl animate-blob animation-delay-2000"></div>
    <div class="absolute -bottom-8 left-1/2 w-72 h-72 bg-indigo-500/30 rounded-full blur-3xl animate-blob animation-delay-4000"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 sm:py-24 md:py-32">
    <div class="text-center">
      <!-- Badge -->
      <ScrollReveal animation="fade-down">
        <div class="hero-badge inline-flex items-center px-4 sm:px-6 py-2 sm:py-3 bg-white/10 backdrop-blur-sm rounded-full text-white border border-white/20 mb-8 sm:mb-10 hover:bg-white/15 transition-all duration-300">
          <Icon name="tabler:sparkles" class="w-4 sm:w-5 h-4 sm:h-5 mr-2 sm:mr-3 text-yellow-300" />
          <span class="text-base sm:text-lg font-bold tracking-wide">Luận Giải Tử Vi Chuyên Nghiệp</span>
        </div>
      </ScrollReveal>

      <!-- Main heading -->
      <ScrollReveal animation="fade-up" delay={100}>
        <h1 class="hero-title text-5xl sm:text-6xl md:text-7xl lg:text-8xl xl:text-9xl font-black text-white mb-6 sm:mb-8 leading-[0.9] px-2">
          <span class="block hero-main-text">
            Tử Vi Trúc Nghi
          </span>
          <span class="block hero-subtitle text-3xl sm:text-4xl md:text-5xl lg:text-6xl xl:text-7xl mt-2 sm:mt-4">
            Biết Vận Hạn, Nắm Cơ Hội
          </span>
        </h1>
      </ScrollReveal>

      <!-- Description -->
      <ScrollReveal animation="fade-up" delay={200}>
        <p class="hero-description text-xl sm:text-2xl md:text-3xl lg:text-4xl text-indigo-100 mb-8 sm:mb-10 max-w-4xl mx-auto leading-relaxed font-medium px-4">
          Luận giải Tử Vi/Bát Tự chi tiết, chính xác. 
          <span class="block mt-2 text-yellow-200 font-semibold">
            Tư vấn tài lộc, quan lộc, tình cảm, sức khỏe toàn diện.
          </span>
        </p>
      </ScrollReveal>

      <!-- CTA Buttons -->
      <ScrollReveal animation="scale-up" delay={300}>
        <div class="flex flex-col sm:flex-row items-center justify-center gap-4 sm:gap-6 mb-10 sm:mb-14 px-4">
          <a
            href="#pricing"
            class="hero-cta-primary w-full sm:w-auto group inline-flex items-center justify-center px-8 sm:px-10 py-4 sm:py-5 bg-gradient-to-r from-yellow-400 to-orange-500 text-gray-900 font-bold text-xl sm:text-2xl rounded-2xl hover:from-yellow-300 hover:to-orange-400 transition-all duration-300 transform hover:scale-105 shadow-2xl hover:shadow-yellow-500/50"
          >
            <Icon name="tabler:stars" class="w-5 sm:w-6 h-5 sm:h-6 mr-3 group-hover:rotate-12 transition-transform" />
            Xem Gói Dịch Vụ
            <Icon name="tabler:arrow-right" class="w-5 sm:w-6 h-5 sm:h-6 ml-3 group-hover:translate-x-1 transition-transform" />
          </a>
          <a
            href="#about"
            class="hero-cta-secondary w-full sm:w-auto inline-flex items-center justify-center px-8 sm:px-10 py-4 sm:py-5 bg-white/10 backdrop-blur-sm text-white font-semibold text-xl sm:text-2xl rounded-2xl border-2 border-white/30 hover:bg-white/20 hover:border-white/50 transition-all duration-300"
          >
            <Icon name="tabler:info-circle" class="w-5 sm:w-6 h-5 sm:h-6 mr-3" />
            Tìm Hiểu Thêm
          </a>
        </div>
      </ScrollReveal>

      <!-- Features/Stats -->
      <ScrollReveal animation="fade-up" delay={400}>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 sm:gap-6 md:gap-8 max-w-5xl mx-auto px-4">
          <div class="hero-stat-card bg-white/10 backdrop-blur-sm rounded-2xl p-6 sm:p-8 border border-white/20 hover:bg-white/15 transition-all duration-300">
            <div class="hero-stat-number text-4xl sm:text-5xl font-black text-yellow-300 mb-2 tabular-nums">10,000+</div>
            <div class="hero-stat-label text-base sm:text-lg text-indigo-200 font-semibold">Khách hàng</div>
          </div>
          <div class="hero-stat-card bg-white/10 backdrop-blur-sm rounded-2xl p-6 sm:p-8 border border-white/20 hover:bg-white/15 transition-all duration-300">
            <div class="hero-stat-number text-4xl sm:text-5xl font-black text-green-300 mb-2 tabular-nums">4.9/5</div>
            <div class="hero-stat-label text-base sm:text-lg text-indigo-200 font-semibold">Đánh giá</div>
          </div>
          <div class="hero-stat-card bg-white/10 backdrop-blur-sm rounded-2xl p-6 sm:p-8 border border-white/20 hover:bg-white/15 transition-all duration-300">
            <div class="hero-stat-number text-4xl sm:text-5xl font-black text-blue-300 mb-2 tabular-nums">95%</div>
            <div class="hero-stat-label text-base sm:text-lg text-indigo-200 font-semibold">Độ chính xác</div>
          </div>
          <div class="hero-stat-card bg-white/10 backdrop-blur-sm rounded-2xl p-6 sm:p-8 border border-white/20 hover:bg-white/15 transition-all duration-300">
            <div class="hero-stat-number text-4xl sm:text-5xl font-black text-pink-300 mb-2 tabular-nums">24h</div>
            <div class="hero-stat-label text-base sm:text-lg text-indigo-200 font-semibold">Giao nhanh</div>
          </div>
        </div>
      </ScrollReveal>

      <!-- Scroll indicator -->
      <ScrollReveal animation="fade-in" delay={600}>
        <div class="mt-16">
          <a href="#about" class="inline-block animate-bounce">
            <Icon name="tabler:chevron-down" class="w-8 h-8 text-white/50 hover:text-white transition-colors" />
          </a>
        </div>
      </ScrollReveal>
    </div>
  </div>

  <!-- Scroll fade effect -->
  <div id="hero-overlay" class="absolute inset-0 bg-black pointer-events-none transition-opacity duration-300" style="opacity: 0;"></div>
</section>

<style>
  @keyframes blob {
    0% {
      transform: translate(0px, 0px) scale(1);
    }
    33% {
      transform: translate(30px, -50px) scale(1.1);
    }
    66% {
      transform: translate(-20px, 20px) scale(0.9);
    }
    100% {
      transform: translate(0px, 0px) scale(1);
    }
  }

  .animate-blob {
    animation: blob 7s infinite;
  }

  .animation-delay-2000 {
    animation-delay: 2s;
  }

  .animation-delay-4000 {
    animation-delay: 4s;
  }

  /* Smooth scroll fade */
  #hero {
    transition: opacity 0.3s ease-out;
  }

  /* Hero Typography Styles */
  .hero-badge {
    font-family: 'Inter', 'Poppins', -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
    font-weight: 700;
    letter-spacing: -0.01em;
    text-rendering: optimizeLegibility;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }
  
  .hero-title {
    font-family: 'Space Grotesk', 'Poppins', 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
    font-weight: 900;
    letter-spacing: -0.03em;
    text-rendering: optimizeLegibility;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }
  
  .hero-main-text {
    background: linear-gradient(135deg, #ffffff 0%, #f8fafc 50%, #e2e8f0 100%);
